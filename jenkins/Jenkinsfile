pipeline {
    agent any
    triggers {
        githubPullRequest {
            cron('H/5 * * * *')
            useGitHubHooks()
        }
    }
    stages {
        stage('Build') {
            steps {
                echo 'Building...'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing...'
            }
        }
        stage('Deploy') {
            steps {
                echo 'Deploying...'
            }
        }
    }
}
